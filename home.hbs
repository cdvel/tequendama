{{!< default}}
<div class="container clearfix">
  <main role="main" class="content">
    <h2 class="section-title">Latest writing</h2><a class="view-all" href="/writings">view all writing ▷</a>
    {{#foreach posts limit="5"}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}

    <h2 class="section-title">Latest book notes</h2><a class="view-all" href="/books">view all notes ▷</a>
