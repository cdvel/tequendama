{{!< default}}
<div class="container clearfix">
  <main role="main" class="content">
    <h2 class="section-title">Latest writing</h2><a class="view-all" href="/writing">view all ▷</a>
    {{#foreach posts limit="5"}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          {{#tags.[1]}}<div><img class="notes-img" src="https://res.cloudinary.com/cdvel/image/upload/v1600263035/icons/{{name}}.svg"></div>{{/tags.[1]}}
          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags from="2" separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}

    <h2 class="section-title">Latest book notes</h2><a class="view-all" href="/books">view all ▷</a>
    <div class="books-grid">
    {{#get "posts" include="tags" limit='6' filter="tags:books"}}
    {{#foreach posts}}
    <article class="{{post_class}}" style="display: table !important; height: 5rem !important;">
        <div class="post-excerpt" style="display:table-cell !important; vertical-align:middle !important;">
          <h1 class="post-title" style="font-size: 1rem !important; width: 70% !important; line-height: 1.6rem !important;"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info" style="display: flex !important;">
            <div class="post-meta">
              {{tags from="2" separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}
    {{/get}}
    </div>
    <h2 class="section-title">Latest reference</h2><a class="view-all" href="/notes">view all ▷</a>
    <div class="reference-grid">
    {{#get "posts" include="tags" limit='6' filter="tags:notes"}}
    {{#foreach posts}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          <div>
            <img class="notes-img" src="{{img_url feature_image size='small'}}">
          </div>
          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags from="2" separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}
    {{/get}}
    </div>
    </main>
  </div>