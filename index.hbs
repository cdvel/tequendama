{{!< default}}
<div class="container clearfix">
  <main role="main" class="content">
    <h2>Latest writing</h2>
    {{#foreach posts limit="5"}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          <h1 class="post-title"><a href="{{url}}">{{title}}</a><span>{{#if featured}}★{{/if}}</span></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}

    <h2>Book notes</h2>
    <div class="books-grid">
    {{#foreach posts limit="5" filter="tags:books"}}
    <article class="{{post_class}}" style="display: table !important; height: 5rem !important;">
        <div class="post-excerpt" style="display:table-cell !important; vertical-align:middle; !important">
          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}
    </div>
    <h2>Technical notes</h2>
    {{#foreach posts limit="5" filter="tags:notes"}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info">
            <div class="post-meta">
              {{tags separator=" " prefix=""}}
            </div>
          </div>
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">▷ read more</a></div>
        </div>
      </article>
      {{/foreach}}

      {{pagination}}
    </main>
  </div>