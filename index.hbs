{{!< default}}
<div class="container clearfix">
  <main role="main" class="content">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <div class="post-excerpt">
          <h1><a href="{{url}}">{{title}}</a></h1>
          <div class="post-info"> 
            <div class="post-meta">
              {{tags separator=" " prefix=""}}
            </div>
          </div>          
          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">â–· read more</a></div>
        </div>
      </article>
      {{/foreach}}
      {{pagination}}
    </main>
  </div>