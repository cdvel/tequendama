{{!< default}}
<div class="container clearfix">
	<main role="main" class="content">
		<div class="tag-title">
			<h1>üè∑ {{tag.name}}</h1>
			<code>{{tag.description}}</code>
		</div>

		{{#get "tags" limit='all' include='count.posts' order='count.posts desc'}}
		{{#foreach tags}}
	      <span class="post-info no-index">
			<span class="post-meta">
				<a class="tag-meta" href="{{url}}">{{name}} <small>({{ count.posts }})</small></a>
			</span>
		  </span>
		  {{else}}
		  <p>no tags :(</p>
		{{/foreach}}

		{{/get}}
		<hr/>
		{{#foreach posts}}
	    <article class="{{post_class}}">
	        <div class="post-excerpt">
	          <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
	          <span class="reading-time"> {{reading_time}}</span>
	          <div class="post-info">
	            <div class="post-meta">
	              {{tags from="2" separator=" " prefix=""}}
	            </div>
	          </div>
	          <div class="excerpt">{{excerpt characters="260"}}&hellip;<a class="read-more" href="{{url}}">‚ñ∑ read more</a></div>
	        </div>
	      </article>
		{{/foreach}}
		{{pagination}}
	</main>
</div>